<p id="notice"><%= notice %></p>

<h1><%= t('activerecord.models.report') %></h1>

<table>
  <thead>
    <tr>
      <th><%= t('activerecord.attributes.report.title') %></th>
      <th><%= t('activerecord.attributes.report.body') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reports.each do |report| %>
      <tr>
        <td><%= report.title %></td>
        <td><%= report.body %></td>
        <td><%= link_to t('scaffold.show'), report %></td>
        <td><%= link_to t('scaffold.edit'), edit_report_path(report) %></td>
        <td><%= link_to t('scaffold.destroy'), report, method: :delete, data: { confirm: t('scaffold.confirm') } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @reports %>

<br>

<%= link_to t('scaffold.new'), new_report_path %>
